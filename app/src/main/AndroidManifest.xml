<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ize.edgehue">

    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EdgeConfigure"
            android:label="@string/title_activity_edge_configure"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".EdgeHueProvider">
            <intent-filter>
                <action android:name="com.samsung.android.cocktail.v2.action.COCKTAIL_UPDATE" />
                <action android:name="com.ize.edgehue.ACTION_REMOTE_LONGCLICK" />
                <action android:name="com.ize.edgehue.ACTION_REMOTE_CLICK" />
                <action android:name="com.ize.edgehue.ACTION_PULL_TO_REFRESH" />
                <action android:name="com.ize.edgehue.ACTION_RECEIVE_HUE_STATE" />
                <action android:name="com.ize.edgehue.ACTION_RECEIVE_HUE_REPLY" />
            </intent-filter>

            <meta-data
                android:name="com.samsung.android.cocktail.provider"
                android:resource="@xml/edge_hue" />
        </receiver>

        <service
            android:name=".EdgeHueProvider"
            android:permission="android.permission.INTERNET" />
        <service
            android:name=".MainActivity"
            android:permission="android.permission.INTERNET" />
    </application>

</manifest>