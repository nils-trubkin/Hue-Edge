<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ize.edgehue">

    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.EdgeSetup"
            android:label="@string/title_activity_edge_setup"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.EditActivity"
            android:label="TODO"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name=".EdgeHueProvider" >
            <intent-filter>
                <action android:name="com.samsung.android.cocktail.v2.action.COCKTAIL_UPDATE" />
                <action android:name="com.ize.edgehue.ACTION_REMOTE_LONG_CLICK" />
                <action android:name="com.ize.edgehue.ACTION_REMOTE_CLICK" />
                <action android:name="com.ize.edgehue.ACTION_PULL_TO_REFRESH" />
                <action android:name="com.ize.edgehue.ACTION_RECEIVE_HUE_STATE" />
                <action android:name="com.ize.edgehue.ACTION_RECEIVE_HUE_REPLY" />
            </intent-filter>

            <meta-data
                android:name="com.samsung.android.cocktail.provider"
                android:resource="@xml/edge_hue" />
        </receiver>

        <service
            android:name=".LongClickRemoteViewService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            />

        <service
            android:name=".LongClickRemoteViewService2"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            />

        <service
            android:name=".LongClickRemoteViewService3"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            />

    </application>

</manifest>