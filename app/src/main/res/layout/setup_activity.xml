<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetupActivity"
    tools:ignore="SpUsage">

    <Button
        android:id="@+id/button_about"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setup_button_height"
        android:layout_marginStart="@dimen/curved_edge_margin"
        android:layout_marginEnd="@dimen/curved_edge_margin"
        android:background="@drawable/setup_button_background"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/about_padding_left_right"
        android:paddingRight="@dimen/about_padding_left_right"
        android:text="@string/setup_button_about"
        android:textAllCaps="false"
        android:textSize="@dimen/setup_button_text_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/backgroundView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/blurry_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/setup_big_logo_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998"
        tools:ignore="SpUsage" />

    <com.badoualy.stepperindicator.StepperIndicator
        android:id="@+id/steps_wizard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/logoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundView"
        app:layout_constraintVertical_bias="0.32999998"
        app:stpi_circleColor="@color/black"
        app:stpi_indicatorColor="@color/white"
        app:stpi_labelColor="@color/white"
        app:stpi_labelSize="@dimen/hue_status_text_size"
        app:stpi_labels="@array/step_labels"
        app:stpi_lineColor="@color/black"
        app:stpi_lineDoneColor="@color/white"
        app:stpi_stepCount="5" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_setup"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoTextView"
        app:navGraph="@navigation/nav_graph" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_manual_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_background"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/setup_big_logo_text_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666666666"
        tools:ignore="SpUsage">

        <TextView
            android:id="@+id/help_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/curved_edge_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/curved_edge_margin"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/fragment_manual_help_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/about_text_text_size"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/ip_help_description"
            app:layout_constraintBottom_toTopOf="@id/button_help_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/help_text_view"
            app:srcCompat="@drawable/manual_ip_help_graphic"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <Button
            android:id="@+id/button_help_close"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_marginBottom="16dp"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/setup_button_close_help"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:ignore="SpUsage"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_background"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/setup_big_logo_text_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/curved_edge_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/curved_edge_margin"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/setup_about_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/about_text_text_size"
            app:layout_constraintBottom_toTopOf="@id/button_paypal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <Button
            android:id="@+id/button_paypal"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_marginBottom="16dp"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/setup_button_support"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            app:layout_constraintBottom_toTopOf="@id/button_contact_me"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_about"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <Button
            android:id="@+id/button_contact_me"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_marginBottom="16dp"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/setup_button_contact"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            app:layout_constraintBottom_toTopOf="@id/button_license"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_paypal"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <Button
            android:id="@+id/button_license"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_marginBottom="16dp"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/setup_button_license"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            app:layout_constraintBottom_toTopOf="@id/button_about_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_contact_me"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <Button
            android:id="@+id/button_about_close"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_marginBottom="16dp"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/setup_button_close_about"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_license"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>