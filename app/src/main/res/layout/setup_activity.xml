<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blurry_background_under_layer"
    tools:context=".activity.SetupActivity">

    <Button
        android:id="@+id/about_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setup_button_height"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/about_top_margin"
        android:layout_marginEnd="@dimen/about_right_margin"
        android:background="@drawable/setup_button_background"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/about_padding_left_right"
        android:paddingRight="@dimen/about_padding_left_right"
        android:text="@string/about_button_text"
        android:textAllCaps="false"
        android:textSize="@dimen/setup_button_text_size" />

    <ImageView
        android:id="@+id/backgroundView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:foreground="@color/blurry_background_over_layer"
        android:foregroundTintMode="multiply"
        android:scaleType="centerCrop"
        android:src="@drawable/blurry_background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setup_big_logo_height"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/edge_hue_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/setup_big_logo_text_size" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setup_root_layout_height"
        android:layout_marginLeft="@dimen/curved_edge_margin"
        android:layout_marginRight="@dimen/curved_edge_margin"
        android:layout_marginBottom="@dimen/curved_edge_margin"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_anchor="@+id/backgroundView"
        app:layout_anchorGravity="bottom|center">

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/setup_status_text_padding_bottom"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/setup_status_text_size"
            tools:text="@string/fragment_welcome_label" />

        <ListView
            android:id="@+id/bridge_discovery_result_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setup_discovery_results_height"
            android:layout_marginBottom="@dimen/setup_discovery_results_margin_bottom"
            android:background="@drawable/list_background"
            android:divider="@null"
            android:visibility="gone" />

        <EditText
            android:id="@+id/ip_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="ipAddress, ip"
            android:background="@drawable/setup_button_background"
            android:digits="0123456789."
            android:elegantTextHeight="true"
            android:ems="10"
            android:hint="@string/fragment_manual_ip_field"
            android:inputType="number"
            android:textAlignment="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/pushlink_image"
            android:layout_width="@dimen/setup_pushlink_image_dimen"
            android:layout_height="@dimen/setup_pushlink_image_dimen"
            android:layout_gravity="center"
            android:contentDescription="@string/pushlink_image_description"
            android:scaleType="fitXY"
            android:translationX="@dimen/setup_pushlink_image_translation_x"
            android:visibility="gone"
            app:srcCompat="@drawable/pushlink_image" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/setup_progress_bar_padding_bottom"
            android:visibility="gone" />

        <Button
            android:id="@+id/bridge_discovery_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_welcome_button"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size" />

        <Button
            android:id="@+id/cheat_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_welcome_button_cheat"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:textSize="@dimen/setup_button_text_size"
            tools:visibility="gone" />

        <Button
            android:id="@+id/manual_ip"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_welcome_button_manual_ip"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="visible" />

        <Button
            android:id="@+id/manual_ip_confirm"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_welcome_button_manual_ip_confirm"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/manual_ip_help"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_welcome_button_manual_ip_help"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/manual_ip_back"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_welcome_button_manual_ip_back"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/bridge_discovery_cancel_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_search_button"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/quick_setup_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_settings_button_quick"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/custom_setup_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_settings_button_custom"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/finish_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_final_button_finish"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/remove_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_final_button_remove"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/yes_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_confirmation_button_yes"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/no_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/fragment_confirmation_button_no"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_window_margin_top"
        android:layout_marginBottom="@dimen/about_window_margin_bottom"
        android:background="@drawable/about_background"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/help_window_padding_bottom"
        android:text="@string/edge_hue_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/setup_big_logo_text_size"
        android:visibility="gone">

        <TextView
            android:id="@+id/about_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/about_window_margin_left_right"
            android:layout_marginTop="@dimen/about_text_margin_top"
            android:layout_marginRight="@dimen/about_window_margin_left_right"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/about_text_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/about_text_text_size" />

        <Button
            android:id="@+id/contact_me"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/about_btn_contact_me"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size" />

        <Button
            android:id="@+id/support"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setup_button_margin_top"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/about_btn_support"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size" />

        <Button
            android:id="@+id/about_close_button"
            android:layout_width="@dimen/setup_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ip_help_close_button_margin_top_bottom"
            android:layout_marginBottom="@dimen/ip_help_close_button_margin_top_bottom"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/close_about_text"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/help_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/help_window_margin_top"
        android:layout_marginBottom="@dimen/about_window_margin_bottom"
        android:background="@drawable/about_background"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:orientation="vertical"
        android:text="@string/edge_hue_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/setup_big_logo_text_size"
        android:visibility="gone">

        <TextView
            android:id="@+id/help_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/about_window_margin_left_right"
            android:layout_marginTop="@dimen/about_window_margin_top"
            android:layout_marginRight="@dimen/about_window_margin_left_right"
            android:layout_marginBottom="@dimen/about_window_margin_top"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/manual_ip_help_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/about_text_text_size" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ip_help_description"
            app:srcCompat="@drawable/manual_ip_help_graphic" />

        <Button
            android:id="@+id/close_help"
            android:layout_width="@dimen/about_button_width"
            android:layout_height="@dimen/setup_button_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ip_help_close_button_margin_top_bottom"
            android:layout_marginBottom="@dimen/ip_help_close_button_margin_top_bottom"
            android:background="@drawable/setup_button_background"
            android:includeFontPadding="false"
            android:text="@string/close_help_text"
            android:textAllCaps="false"
            android:textSize="@dimen/setup_button_text_size" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>