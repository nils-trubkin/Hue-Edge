            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCategory4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
