<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/adapter_root_layout_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/gridBtn"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="@dimen/resource_button_dimen"
        android:layout_height="@dimen/resource_button_dimen"
        android:background="@drawable/add_button_background"
        android:fontFamily="@font/roboto"
        android:hyphenationFrequency="full"
        android:includeFontPadding="false"
        android:padding="@dimen/resource_button_padding"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gridBtnTopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hyphenationFrequency="none"
        android:maxWidth="@dimen/resource_button_dimen"
        android:padding="@dimen/resource_button_padding"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/gridBtn"
        app:layout_constraintEnd_toEndOf="@id/gridBtn"
        app:layout_constraintStart_toStartOf="@id/gridBtn"
        app:layout_constraintTop_toTopOf="@id/gridBtn" />

    <TextView
        android:id="@+id/gridBtnText"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/resource_btn_text_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>